{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowUnusedLabels": false,
    "removeComments": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
